.container(ng-controller="loginCtrl")
    .col-md-6.col-md-offset-3
        form(ng-submit="join()")
            .form-group
                label.sr-only session id
                .input-group
                    .input-group-addon SID
                    input.form-control.input-lg(type="number" ng-model="sid")

            button.btn.btn-default(type="submit")
                span Play!